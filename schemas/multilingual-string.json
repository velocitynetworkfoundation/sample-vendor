{
  "type": "object",
  "title": "multilingual-string",
  "$id": "multilingual-string",
  "version": 1,
  "additionalProperties": false,
  "description": "an internationalized version of a string",
  "properties": {
    "localized": {
      "type": "object",
      "propertyNames": {
        "pattern": "^[a-z]{2}(_[A-Z]{2})?$"
      },
      "additionalProperties": {
        "type": "string"
      }
    },
    "preferredLocale": {
      "type": "object",
      "properties": {
        "country": {
          "type": "string",
          "format": "regex",
          "pattern": "^[A-Z]{2}$"
        },
        "language": {
          "type": "string",
          "format": "regex",
          "pattern": "^[a-z]{2}$"
        }
      },
      "required": [
        "language"
      ]
    }
  },
  "required": [
    "localized"
  ]
}